<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mytodo.MainController"
            prefWidth="1000" prefHeight="650">

    <top>
        <VBox spacing="6" style="-fx-padding: 0 10 10 10;">
            <MenuBar>
                <menus>
                    <Menu text="File">
                        <items>
                            <MenuItem text="Exit" onAction="#handleExit"/>
                        </items>
                    </Menu>

                    <Menu text="Edit">
                        <items>
                            <MenuItem text="Delete All Completed" onAction="#handleDeleteCompleted"/>
                        </items>
                    </Menu>

                    <Menu text="Help">
                        <items>
                            <MenuItem text="About" onAction="#handleHelp"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <TextField fx:id="searchField" promptText="Search tasks..." prefWidth="250" HBox.hgrow="ALWAYS"/>
                <Button fx:id="filterBtn" text="Search"/>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox fx:id="sidebar" spacing="8" prefWidth="180" style="-fx-padding: 10; -fx-background-color: #e6e6e6;">
            <Button fx:id="btnToday" text="ðŸ“… Today" maxWidth="Infinity" styleClass="nav-item"/>
            <Button fx:id="btnImportant" text="â­ Important" maxWidth="Infinity" styleClass="nav-item"/>
            <Button fx:id="btnAll" text="ðŸ“‹ All" maxWidth="Infinity" styleClass="nav-item"/>
            <Separator/>
            <Button fx:id="btnPending" text="ðŸ•’ Pending" maxWidth="Infinity" styleClass="nav-item"/>
            <Button fx:id="btnFinished" text="âœ… Completed" maxWidth="Infinity" styleClass="nav-item"/>
        </VBox>
    </left>

    <center>
        <ListView fx:id="taskList" style="-fx-padding: 10; -fx-background-color: transparent;"/>
    </center>

    <bottom>
        <HBox spacing="8" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1 0 0 0;" alignment="CENTER_LEFT">
            <TextField fx:id="quickAddField" promptText="Quick add a task..." HBox.hgrow="ALWAYS"/>
            <Button fx:id="quickAddBtn" text="Add"/>
            <Button fx:id="detailAddBtn" text="Add Details..."/>
        </HBox>
    </bottom>
</BorderPane>
