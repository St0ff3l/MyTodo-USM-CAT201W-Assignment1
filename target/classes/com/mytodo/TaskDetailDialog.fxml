<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mytodo.TaskDetailController">

    <content>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Task Title:"/>
            <TextField fx:id="titleField" promptText="e.g., Submit report"/>

            <Label text="Due Date:"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <DatePicker fx:id="dueDatePicker" HBox.hgrow="ALWAYS"/>
                <Label text="Time:"/>
                <Spinner fx:id="dueTimeSpinner" prefWidth="100"/>
            </HBox>

            <Label text="Priority:"/>
            <ChoiceBox fx:id="priorityBox" maxWidth="Infinity"/>

            <Label text="Description:"/>
            <TextArea fx:id="descArea" prefRowCount="3" promptText="Add details or notes here..."/>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</DialogPane>
