<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<DialogPane fx:id="aboutPane" prefWidth="450.0" styleClass="mac-style-dialog" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mytodo.AboutDialogController">

    <content>
        <VBox fx:id="contentContainer" alignment="TOP_LEFT" prefHeight="120.0" prefWidth="450.0" spacing="0">
            <!-- Unified padding, consistent with CustomAlert -->
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <!-- Header label -->
            <Label fx:id="headerLabel" styleClass="alert-header-text" wrapText="true" />

            <!-- Separator line -->
            <HBox fx:id="separatorBox" maxHeight="18.0" minHeight="2.0" minWidth="500.0" prefHeight="18.0" prefWidth="450.0" style="-fx-background-color: #d4e0f0; -fx-opacity: 1;">
                <cursor><Cursor fx:constant="DEFAULT" /></cursor>
            </HBox>

            <!-- Content label (supports line wrapping, used to display version/features information) -->
            <Label fx:id="contentLabel" alignment="TOP_LEFT" minHeight="150.0" styleClass="alert-content-text" wrapText="true" />

            <!-- Keep only the OK button (right-aligned) -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <VBox.margin><Insets top="20" /></VBox.margin>
                <Region HBox.hgrow="ALWAYS" /> <!-- Fills remaining space so the button is right-aligned -->
                <Button fx:id="okButton" styleClass="btn-ok" text="OK" />
            </HBox>

        </VBox>
    </content>

</DialogPane>