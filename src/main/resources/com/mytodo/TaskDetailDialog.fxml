<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefWidth="400.0" styleClass="mac-style-dialog" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mytodo.TaskDetailController"> <content>
    <VBox spacing="10" style="-fx-padding: 10;">
        <Label text="Task Title:" />
        <TextField fx:id="titleField" maxWidth="350.0" promptText="e.g., Submit report">
            <VBox.margin>
               <Insets left="15.0" />
            </VBox.margin></TextField>

        <Label text="Due Date:" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <DatePicker fx:id="dueDatePicker" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin></DatePicker>
            <Label text="Time:" />
            <Spinner fx:id="dueTimeSpinner" prefWidth="100">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Spinner>
        </HBox>

        <Label text="Priority:" />
        <ChoiceBox fx:id="priorityBox" maxWidth="350.0" minWidth="10.0" prefWidth="10.0">
            <VBox.margin>
               <Insets left="15.0" />
            </VBox.margin></ChoiceBox>

        <Label text="Description:" />
        <TextArea fx:id="descArea" maxWidth="350.0" prefRowCount="3" promptText="Add details or notes here...">
            <VBox.margin>
               <Insets left="15.0" />
            </VBox.margin></TextArea>

        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="cancelButton" minWidth="80" styleClass="btn-cancel" text="Cancel" />
            <Button fx:id="okButton" minWidth="80" styleClass="btn-ok" text="OK" />
            <VBox.margin>
               <Insets right="15.0" />
            </VBox.margin>
        </HBox>

    </VBox>
</content>

</DialogPane>
