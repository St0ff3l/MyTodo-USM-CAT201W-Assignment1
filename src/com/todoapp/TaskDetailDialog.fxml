<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.todoapp.TaskDetailController">

    <content>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="任务标题:"/>
            <TextField fx:id="titleField" promptText="例如：提交报告"/>

            <Label text="截止日期:"/>
            <DatePicker fx:id="dueDatePicker"/>

            <Label text="优先级:"/>
            <ChoiceBox fx:id="priorityBox"/>

            <Label text="任务描述:"/>
            <TextArea fx:id="descArea" prefRowCount="3"/>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</DialogPane>